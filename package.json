  "scripts": {
    "tsc": "node_modules/.bin/tsc",
    "build:next": "next build",
    "build:server": "tsc --project tsconfig.server.json",
    "copy:view": "cpx \"server/views/**/*\" ./build/views",
    "build": "yarn build:next && yarn build:server && yarn copy:view",
    "dev:server": "node_modules/.bin/nodemon build/index.js",
    "dev:alternate": "ts-node --project tsconfig.server.json server/index.ts",
    "dev": "node_modules/.bin/concurrently \"yarn build:server -w\" \"yarn dev:server\" \"yarn copy:view -w\"",
    "start": "NODE_ENV=production node build/index.js",
    "lint": "tsc --noEmit && eslint . --ext ts --ext tsx --ext js --quiet --fix",
    "test:front": "jest",
    "test:front:watch": "jest --watch",
    "test:front:coverage": "jest --coverage",
    "test:back": "env TS_NODE_PROJECT=\"tsconfig.server.json\" NODE_ENV=test mocha --file tests/setup/db.ts --exit",
    "test:back:watch": "yarn test:back --watch",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
